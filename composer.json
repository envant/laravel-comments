{
    "name": "envant/comments",
    "description": "Add comments to your Eloquent models",
    "license": "MIT",
    "authors": [
        {
            "name": "Boris Lepikhin",
            "email": "info@envant.me",
            "homepage": "https://envant.me"
        }
    ],
    "homepage": "https://github.com/envant/comments",
    "keywords": ["Laravel", "Comments"],
    "require": {
        "envant/helpers": "dev-master",
        "illuminate/database": "^5.8|^6.0",
        "illuminate/support": "^5.8|^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~7.0",
        "mockery/mockery": "^1.1",
        "orchestra/testbench": "~3.0",
        "sempro/phpunit-pretty-print": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Envant\\Comments\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Envant\\Comments\\Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Envant\\Comments\\CommentsServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
